<!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
     JAVASCRIPT
     â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
<script>
$(document).ready(function () {

  /* â”€â”€â”€ í…Œì´ë¸” í–‰ ìƒì„± í—¬í¼ â”€â”€â”€ */
  function buildRows(colCount, rowCount) {
    let html = '';
    for (let i = 1; i <= rowCount; i++) {
      html += '<tr><td>' + i + '</td>';
      for (let c = 1; c < colCount; c++) html += '<td></td>';
      html += '</tr>';
    }
    return html;
  }

  // ê° í…Œì´ë¸” ì´ˆê¸°í™”
  $('#scan-tbody').html(buildRows(8, 11));
  $('#ì ‘ìˆ˜-tbody').html(buildRows(8, 11));
  $('#ì „ì†¡-tbody').html(buildRows(9, 11));

  /* â”€â”€â”€ ëª¨ë‹¬ ì—´ê¸° â”€â”€â”€ */
  window.openModal = function (id) {
    $('#' + id).addClass('active');
  };

  /* â”€â”€â”€ ëª¨ë‹¬ ë‹«ê¸° â”€â”€â”€ */
  window.closeModal = function (id) {
    $('#' + id).removeClass('active');
  };

  /* â”€â”€â”€ ë°±ë“œë¡­ í´ë¦­ìœ¼ë¡œ ë‹«ê¸° â”€â”€â”€ */
  $('.modal-overlay').on('click', function (e) {
    if ($(e.target).is('.modal-overlay')) {
      $(this).removeClass('active');
    }
  });

  /* â”€â”€â”€ ëª¨ë‘ ì—´ê¸° (í…ŒìŠ¤íŠ¸ìš©) â”€â”€â”€ */
  window.openAll = function () {
    $('.modal-overlay').addClass('active');
  };

});
</script>
</body>
</html>
